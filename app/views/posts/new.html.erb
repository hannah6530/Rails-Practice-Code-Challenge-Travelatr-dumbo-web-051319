<h3>New Post</h3>

<%= form_for @post do |form| %>
<%= form.label :blogger_id %>
<%= form.collection_select :blogger_id, @bloggers, :id, :name %>
<%= form.label :destination_id %>
<%= form.collection_select :destination_id , @destinations, :id, :name %>
<%= form.label :title %>
<%= form.text_field :title %>
<%= form.label :content %>
<%= form.text_field :content %>
<%= form.submit %>
<% end %>
